// Prisma schema file
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  name       String?
  createdAt  DateTime    @default(now())
  memoBoards MemoBoard[]
}

model MemoBoard {
  id         Int      @id @default(autoincrement())
  userId     Int
  title      String
  background String   @default("#ffff88")
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  memos      Memo[]
}

model Memo {
  id              Int       @id @default(autoincrement())
  boardId         Int
  content         String
  x               Int       @default(0)
  y               Int       @default(0)
  width           Int       @default(200)
  height          Int       @default(100)
  fontSize        Int       @default(14)
  fontColor       String    @default("#000000")
  fontWeight      String    @default("normal")
  fontFamily      String    @default("Arial")
  backgroundColor String    @default("#ffffff")
  borderWidth     Int       @default(1)
  borderColor     String    @default("#000000")
  overflow        String    @default("hidden") // "auto"에서 "hidden"으로 변경
  modifiedAt      DateTime  @updatedAt
  board           MemoBoard @relation(fields: [boardId], references: [id])
}
